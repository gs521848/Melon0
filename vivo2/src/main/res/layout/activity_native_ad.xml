<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_ad"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_ad_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/iv_ad_icon"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp" />

        <Button
            android:id="@+id/btn_ad_install"
            android:layout_width="83.33dp"
            android:layout_height="26.67dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="23dp"
            android:background="@drawable/bg_detail_btn" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/btn_ad_install"
            android:layout_toRightOf="@id/iv_ad_icon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_ad_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="#333333"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tv_ad_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2.67dp"
                android:maxLines="1"
                android:textColor="#666666"
                android:textSize="12.67dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_ad_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="#26000000"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="5px"
            android:paddingBottom="5px">

            <ImageView
                android:id="@+id/iv_ad_mark_logo"
                android:layout_width="wrap_content"
                android:layout_height="32px"
                android:layout_marginLeft="5px"
                android:layout_marginRight="5px" />

            <TextView
                android:id="@+id/tv_ad_mark_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5px"
                android:layout_marginRight="5px"
                android:textColor="@android:color/white"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_ad_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5px"
                android:layout_marginRight="5px"
                android:textColor="@android:color/white"
                android:textSize="10sp" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_web_ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="300dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_web_ad_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:minHeight="300dp"
            android:scaleType="fitXY" />

        <LinearLayout
            android:id="@+id/ll_web_ad_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/iv_web_ad_bg"
            android:layout_alignBottom="@+id/iv_web_ad_bg"
            android:background="#26000000"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="5px"
            android:paddingBottom="5px">

            <ImageView
                android:id="@+id/iv_web_ad_mark_logo"
                android:layout_width="wrap_content"
                android:layout_height="32px"
                android:layout_marginLeft="5px"
                android:layout_marginRight="5px" />

            <TextView
                android:id="@+id/tv_web_ad_mark_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5px"
                android:layout_marginRight="5px"
                android:textColor="@android:color/white"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_web_ad_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5px"
                android:layout_marginRight="5px"
                android:textColor="@android:color/white"
                android:textSize="10sp" />
        </LinearLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/btn_load_ad"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="#009688"
        android:text="加载广告"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btn_load_ad_not_show"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="#009688"
        android:text="加载广告不显示"
        android:textColor="@android:color/white" />

</LinearLayout>
