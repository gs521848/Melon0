<?xml version="1.0" encoding="utf-8"?>
<com.vivo.mobilead.unified.base.view.VivoNativeAdContainer xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vn_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_native_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.vivo.mobilead.unified.base.view.NativeVideoView
                android:visibility="gone"
                android:id="@+id/nvv_video"
                android:layout_width="match_parent"
                android:layout_height="240dp" />

            <com.vivo.mobilead.unified.base.view.NativeVideoView
                android:id="@+id/nvv_video_vertical"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_app_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ededed"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="9.33dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_ad_mark_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp" />

                <TextView
                    android:id="@+id/tv_ad_mark_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="广告"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="10sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="vivo广告联盟"
                android:textColor="#333333"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_install"
                android:layout_width="83.33dp"
                android:layout_height="26.67dp"
                android:background="@drawable/bg_detail_btn" />
        </LinearLayout>

    </LinearLayout>
</com.vivo.mobilead.unified.base.view.VivoNativeAdContainer>